CREATE DATABASE NORMALIZE;
USE NORMALIZE;

CREATE TABLE EMPLOYEE(
EMPLOYEE_ID INT AUTO INCREMENT NOT NULL,
EMPLOYEE_NAME VARCHAR (50) NOT NULL,
MANAGER_ID INT NOT NULL,
SECTOR_ID INT NOT NULL,
PRIMARY KEY(EMPLOYEE_ID)
);

INSERT INTO EMPLOYEE(EMPLOYEE_NAME,MANAGER_ID,SECTOR_ID)
VALUE('Ritchie L.',1,4),
     ('Jandy L..',1,3),
     ('Faith C.',2,2),
     ('Charmie K.',2,1),
     ('Zuri B.',2,4),
     ('Joshua S.',3,1)
     ('Charlie B.',3,4);
     
CREATE TABLE SECTOR(
SECTOR_ID INT AUTO_INCREMENT NOT NULL,
SECTOR_NAME VARCHAR (50) NOT NULL,
PRIMARY KEY(SECTOR_ID)
);

INSERT INTO SECTOR(SECTOR_NAME)
VALUE('Administration'),
     ('IT'),
     ('Finance'),
     ('Security');
     
CREATE TABLE MANAGER(
MANAGER_ID INT AUTO_INCREMENT NOT NULL,
MANAGER_NAME VARCHAR (50) NOT NULL,
AREA VARCHAR (50),
PRIMARY KEY(MANAGER_ID)
);

INSERT INTO MANAGER(MANAGER_NAME,AREA)
VALUE('Klee S.','East),
     ('Royce C.','West'),
     ('Michael N.','North');
     
SELECT*FROM EMPLOYEE;
SELECT*FROM SECTOR;
SELECT*FROM MANAGER;
