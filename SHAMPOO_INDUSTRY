CREATE DATABASE SHAMPOO_INDUSTRY;
USE SHAMPOO_INDUSTRY;

CREATE TABLE SHAMPOO_CONTENT(
PRODUCT_NAME VARCHAR (50) NOT NULL,
SPECIFICATION_ML INT NOT NULL,
PRICEP INT NOT NULL,
EFFICACY VARCHAR (50) NOT NULL,
PRIMARY KEY (PRODUCT_NAME)
);

INSERT INTO SHAMPOO_CONTENT(PRODUCT_NAME,SPECIFICATION_ML,PRICEP,EFFICACY)
VALUE ('REPAIR SHAMPOO',200,26,'MAKE HAIR SMOOTH'),
      ('STRONG SHAMPOO',201,22,'MOISTURIZE HAIR'),
      ('BLACK SHAMPOO',202,25,REPAIR DAMAGED HAIR');
      
SELECT*FROM SHAMPOO_CONTENT;
